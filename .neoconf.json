{
  "neodev": {
    "enable": true,
    "library": {
      "enabled": true,
      "plugins": true
    }
  },
  "lsp": {
    "enable": true,
    "autostart": true,
    "diagnostics": {
      "virtual_text": {
        "prefix": "‚óè",
        "spacing": 4
      },
      "signs": true,
      "underline": true,
      "update_in_insert": false,
      "severity_sort": true
    }
  },
  "servers": {
    "lua_ls": {
      "Lua": {
        "workspace": {
          "checkThirdParty": false,
          "library": ["${3rd}/luv/library", "${3rd}/busted/library"]
        },
        "telemetry": {
          "enable": false
        },
        "runtime": {
          "version": "LuaJIT"
        },
        "diagnostics": {
          "globals": ["vim"]
        }
      }
    },
    "ts_ls": {
      "enabled": true,
      "typescript": {
        "preferences": {
          "quotePreference": "single",
          "importModuleSpecifierPreference": "relative"
        },
        "inlayHints": {
          "includeInlayParameterNameHints": "all",
          "includeInlayParameterNameHintsWhenArgumentMatchesName": false,
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true,
          "includeInlayEnumMemberValueHints": true
        }
      }
    },
    "sourcekit": {
      "enabled": true,
      "cmd": ["sourcekit-lsp"],
      "filetypes": ["swift", "objective-c", "objective-cpp"],
      "root_dir": ["Package.swift", "*.xcodeproj", "*.xcworkspace", ".git"]
    },
    "eslint": {
      "enabled": true,
      "workingDirectories": {
        "mode": "auto"
      }
    },
    "jsonls": {
      "enabled": true,
      "json": {
        "validate": {
          "enable": true
        },
        "format": {
          "enable": true
        }
      }
    },
    "html": {
      "enabled": true
    },
    "cssls": {
      "enabled": true
    },
    "tailwindcss": {
      "enabled": true
    },
    "rust_analyzer": {
      "enabled": true,
      "checkOnSave": {
        "command": "clippy"
      },
      "cargo": {
        "allFeatures": true
      }
    },
    "gopls": {
      "enabled": true,
      "settings": {
        "gopls": {
          "gofumpt": true,
          "usePlaceholders": true,
          "analyses": {
            "unusedparams": true
          },
          "staticcheck": true
        }
      }
    },
    "bashls": {
      "enabled": true
    }
  },
  "formatting": {
    "enable": true,
    "format_on_save": true,
    "timeout_ms": 1000
  },
  "completion": {
    "autocomplete": true,
    "show_documentation": true
  }
}
